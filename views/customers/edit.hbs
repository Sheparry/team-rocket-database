<h1>Edit Customers</h1>
<form action="/customers/{{customer.customerID}}/edit" method="POST">
  <label>
    Name:
    <input
      type="text"
      name="name"
      value="{{customer.name}}"
      required
    >
  </label><br>

  <label>
    Email:
    <input
      type="email"
      name="email"
      value="{{customer.email}}"
    >
  </label><br>

  <label>
    Phone:
    <input
      type="text"
      name="phoneNumber"
      value="{{customer.phoneNumber}}"
    >
  </label><br>

  <button type="submit">Save</button>
</form>
