<h1>Orders</h1>
<button onclick="window.location.href='/orders/new'">+ New Order</button>

<table>
  <thead>
    {{! For the table header row, we print the DB attribute names }}
      <tr>
          {{#each orders.[0]}}
          <th>
              {{@key}}
          </th>
          {{/each}}
          <th></th>
      </tr>
  </thead>

  <tbody>
    {{#each orders}}
        <tr>
            <td>{{this.orderID}}</td>
            <td>{{this.customerID}}</td>
            <td>{{this.pokemonSpecies}}</td>
            <td>{{this.minLevel}}</td>
            <td>{{this.maxLevel}}</td>
            <td>{{this.location}}</td>
            <td>{{this.meetupDate}}</td>
            <td>{{this.priceOffered}}</td>
            <td>{{this.status}}</td>

            {{! DELETE form }}
            <form action="/orders/delete" method="POST" id='delete_orders_form'>
                <input type='hidden' name='delete_orders_id' value='{{this.orderID}}' />
                <td>
                    <button type='submit'>
                        Delete
                    </button>
                </td>
            </form>
        </tr>
        {{/each}}
  </tbody>
</table>

<hr>

<h2>Delete an Order</h2>
<form action="/orders/delete" method="POST">
  <label>
    Select Order to Delete:
    <select name="orderID" required>
      <option value="1">Order 1: Pikachu (Customer 1)</option>
      <option value="2">Order 2: Charizard (Customer 2)</option>
      <option value="3">Order 3: Bulbasaur (Customer 3)</option>
      <option value="4">Order 4: Squirtle (Customer 4)</option>
      <option value="5">Order 5: Mewtwo (Customer 5)</option>
    </select>
  </label><br>

  <button type="submit" onclick="return confirm('Are you sure you want to delete this order?')">Delete Order</button>
</form>

<hr>

<h2>Edit an Order</h2>
<form action="/orders/edit" method="POST">
  <label>
    Select Order to Edit:
    <select name="orderID" required>
      <option value="1">Order 1: Pikachu (Cust 1)</option>
      <option value="2">Order 2: Charizard (Cust 2)</option>
      <option value="3">Order 3: Bulbasaur (Cust 3)</option>
      <option value="4">Order 4: Squirtle (Cust 4)</option>
      <option value="5">Order 5: Mewtwo (Cust 5)</option>
    </select>
  </label><br>

  <label>
    Customer ID:
    <select name="customerID" required>
      <option value="1">1 – Ash Ketchun</option>
      <option value="2">2 – Misty Waterflower</option>
      <option value="3">3 – Brock Harrisno</option>
      <option value="4">4 – Gary Oak</option>
      <option value="5">5 – Professor Oak</option>
    </select>
  </label><br>

  <label>
    Pokémon Species:
      <br>
      <input type="text" name="name" placeholder="New Pokemon Species">
    </label><br>

  <label>
    Min Level:
    <input type="number" name="minLevel" value="10" required>
  </label><br>

  <label>
    Max Level:
    <input type="number" name="maxLevel" value="20" required>
  </label><br>

  <label>
      Meetup Location:
      <br>
      <input type="text" name="name" placeholder="New Meetup Location">
    </label><br>

  <label>
    Meetup Date:
    <input type="date" name="meetupDate" value="2023-06-15" required>
  </label><br>

  <label>
    Price Offered:
    <input type="number" name="priceOffered" value="500" required>
  </label><br>

  <label>
    Status:
    <input type="number" name="status" value="1" required>
  </label><br>

  <button type="submit">Save Changes</button>
</form>